@model PatientManagement.Models.Medicine

<div class="p-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-bold mb-4 text-center">Edit Medicine</h2>

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PatientId" />

        <div>
            <label class="block mb-1 font-semibold">Description</label>
            <textarea asp-for="Description" rows="5" class="w-full border rounded px-3 py-2"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-2 justify-center">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded inline-flex items-center gap-2" href="/Patient/Create"><i data-lucide="square-pen" class="w-5 h-5"></i>Update</button>
            <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId"
               class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 inline-flex items-center gap-2">
                <i data-lucide="circle-arrow-left" class="w-5 h-5"></i>
                Back to List
            </a>
        </div>
    </form>
</div>
