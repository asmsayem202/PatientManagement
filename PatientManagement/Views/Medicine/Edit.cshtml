@model PatientManagement.Models.Medicine

<div class="px-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-bold mb-4">Edit Medicine</h2>

    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PatientId" />

        <div>
            <label class="block mb-1 font-semibold">Description</label>
            <textarea asp-for="Description" class="w-full border rounded px-3 py-2"></textarea>
            <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-2">
            <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Update</button>
            <a asp-controller="Patient" asp-action="Details" asp-route-id="@Model.PatientId"
               class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 inline-flex items-center gap-1">
                ⬅ Back to List
            </a>
        </div>
    </form>
</div>
