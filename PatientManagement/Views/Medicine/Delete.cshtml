@model PatientManagement.Models.Medicine

<div class="p-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-bold mb-4 text-red-600">Delete Medicine</h2>

    <p>Are you sure you want to delete this medicine record?</p>

    <div class="mt-4 border p-4 rounded bg-gray-100">
        <p><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded">Delete</button>
        <a href="/Patient/Details/@Model.PatientId" class="ml-4 text-blue-600">Cancel</a>
    </form>
</div>
