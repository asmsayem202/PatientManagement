@model PatientManagement.Models.LoginViewModel

<div class="max-w-md mx-auto mt-12 p-6 bg-white rounded shadow">
    <h2 class="text-2xl font-bold mb-4 text-center">Doctor Login</h2>

    <form asp-action="Login" method="post" class="space-y-4">
        <div>
            <label class="block mb-1 font-semibold">Email</label>
            <input asp-for="Email" class="w-full border px-3 py-2 rounded" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block mb-1 font-semibold">Password</label>
            <div class="relative">
                <input asp-for="Password" type="password" id="passwordInput" class="w-full border px-3 py-2 rounded pr-10" />
                <button type="button" onclick="togglePasswordVisibility()" class="absolute right-3 top-2.5 text-gray-500 hover:text-gray-700">
                    <i id="togglePasswordIcon" data-lucide="eye" class="w-5 h-5"></i>
                </button>
            </div>
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
            Login
        </button>
    </form>
</div>

@section Scripts {
    <script>
        function togglePasswordVisibility() {
            const passwordInput = document.getElementById('passwordInput');
            const icon = document.getElementById('togglePasswordIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.setAttribute('data-lucide', 'eye-off');
            } else {
                passwordInput.type = 'password';
                icon.setAttribute('data-lucide', 'eye');
            }

            lucide.createIcons(); // Refresh Lucide icons after attribute change
        }
    </script>
}
