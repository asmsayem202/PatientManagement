@model PatientManagement.Models.LoginViewModel

<div class="max-w-md mx-auto mt-12 p-6 bg-white rounded shadow">
    <h2 class="text-2xl font-bold mb-4">Doctor Login</h2>

    <form asp-action="Login" method="post" class="space-y-4">
        <div>
            <label class="block mb-1 font-semibold">Email</label>
            <input asp-for="Email" class="w-full border px-3 py-2 rounded" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>
        <div>
            <label class="block mb-1 font-semibold">Password</label>
            <input asp-for="Password" type="password" class="w-full border px-3 py-2 rounded" />
            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
        </div>

        <button type="submit"
                class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
            Login
        </button>
    </form>
</div>
