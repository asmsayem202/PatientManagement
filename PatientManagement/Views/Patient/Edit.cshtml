@model PatientManagement.Models.Patient
@{
    ViewData["Title"] = "Edit";
}

<div class="p-6 max-w-xl mx-auto">
    <h2 class="text-2xl font-bold mb-4 text-center">Edit Patient</h2>
    <form asp-action="Edit" method="post" class="space-y-4">
        <input type="hidden" asp-for="Id" />
        <div>
            <label class="block mb-1 font-semibold">Name</label>
            <input asp-for="Name" class="w-full border rounded px-3 py-2" />
        </div>
        <div>
            <label class="block mb-1 font-semibold">Mobile</label>
            <input asp-for="Mobile" class="w-full border rounded px-3 py-2" />
        </div>
        <div>
            <label class="block mb-1 font-semibold">Address</label>
            <input asp-for="Address" class="w-full border rounded px-3 py-2" />
        </div>
        <div>
            <label class="block mb-1 font-semibold">Symptoms</label>
            <textarea asp-for="Symptoms" rows="3" class="w-full border rounded px-3 py-2"></textarea>
            <span asp-validation-for="Symptoms" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-2 justify-center">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded inline-flex items-center gap-2" href="/Patient/Create"><i data-lucide="square-pen" class="w-5 h-5"></i>Update</button>
            <a asp-action="Index"
               class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 inline-flex items-center gap-2">
                <i data-lucide="circle-arrow-left" class="w-5 h-5"></i>
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
